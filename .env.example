# SignAvatar Web 后端环境配置

# 基本设置
APP_NAME=SignAvatar Web
VERSION=1.0.0
DEBUG=true

# 服务器设置
HOST=0.0.0.0
PORT=8000

# 安全设置
SECRET_KEY=your-super-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 数据库设置
DATABASE_URL=sqlite:///./data/signavatar.db

# Redis设置（可选）
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# 文件上传设置
MAX_UPLOAD_SIZE=104857600  # 100MB
UPLOAD_DIR=uploads

# 模型路径设置
CSLR_MODEL_PATH=models/cslr_model.mindir
CSLR_VOCAB_PATH=models/vocab.json
DIFFUSION_MODEL_PATH=models/diffusion_slp.mindir
FEDERATED_MODEL_PATH=models/federated_slr.mindir

# MediaPipe设置
MEDIAPIPE_MODEL_COMPLEXITY=1
MEDIAPIPE_MIN_DETECTION_CONFIDENCE=0.5
MEDIAPIPE_MIN_TRACKING_CONFIDENCE=0.5

# 监控设置
ENABLE_METRICS=true
METRICS_PORT=9090

# 日志设置
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# 性能设置
MAX_WEBSOCKET_CONNECTIONS=100
FRAME_BUFFER_SIZE=30
INFERENCE_BATCH_SIZE=1

# CORS设置
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5173,http://127.0.0.1:5173