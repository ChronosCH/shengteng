# SignAvatar Web 安全配置文件
# 这是一个安全配置模板，请根据您的环境进行调整

# 基本设置
APP_NAME=SignAvatar Web
VERSION=1.0.0
ENVIRONMENT=production
DEBUG=false

# 服务器设置
HOST=127.0.0.1
PORT=8000
WORKERS=4

# 安全设置 - 请生成您自己的密钥
# 使用以下命令生成安全密钥：
# python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_THIS_TO_A_SECURE_32_CHAR_KEY
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# 速率限制
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# 安全Cookie设置
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=strict

# 数据库设置
DATABASE_URL=sqlite:///./data/signavatar.db
DATABASE_POOL_SIZE=10
DATABASE_TIMEOUT=30

# Redis设置（可选）
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# 文件上传设置
MAX_UPLOAD_SIZE=100
UPLOAD_DIR=uploads
TEMP_DIR=temp

# 模型路径设置
CSLR_MODEL_PATH=models/cslr_model.mindir
CSLR_VOCAB_PATH=models/vocab.json
DIFFUSION_MODEL_PATH=models/diffusion_slp.mindir

# MediaPipe设置
MEDIAPIPE_MODEL_COMPLEXITY=1
MEDIAPIPE_MIN_DETECTION_CONFIDENCE=0.5
MEDIAPIPE_MIN_TRACKING_CONFIDENCE=0.5

# 监控设置
ENABLE_METRICS=true
METRICS_PORT=9090

# CORS设置
ALLOWED_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000","http://localhost:5173","http://127.0.0.1:5173"]

# 日志设置
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/app.log

# 性能设置
ENABLE_GZIP=true
ENABLE_CACHE=true
CACHE_TTL=3600

# 安全头设置
ENABLE_SECURITY_HEADERS=true
CONTENT_SECURITY_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; connect-src 'self' ws: wss:
