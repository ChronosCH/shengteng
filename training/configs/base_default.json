{
  "experiment_name": "cecsl_training",
  "description": "CE-CSL手语识别训练",
  "data_root": "data/CE-CSL",
  "max_sequence_length": 64,
  "image_size": [
    112,
    112
  ],
  "vocab_size": 1000,
  "d_model": 192,
  "n_layers": 2,
  "dropout": 0.3,
  "batch_size": 1,
  "learning_rate": 0.0001,
  "weight_decay": 0.001,
  "epochs": 100,
  "warmup_epochs": 10,
  "optimizer_type": "adam",
  "beta1": 0.9,
  "beta2": 0.999,
  "scheduler_type": "cosine",
  "min_learning_rate": 1e-06,
  "patience": 20,
  "min_delta": 0.001,
  "use_augmentation": true,
  "augment_factor": 1,
  "noise_std": 0.01,
  "time_stretch_range": [
    0.8,
    1.2
  ],
  "device_target": "CPU",
  "output_dir": "output\\cecsl_training",
  "save_best_only": true,
  "save_checkpoint_steps": 100,
  "log_interval": 10,
  "log_level": "INFO"
}