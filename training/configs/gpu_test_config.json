{
    "dataset": {
        "name": "CE-CSL",
        "train_data_path": "data/CE-CSL/video/train",
        "valid_data_path": "data/CE-CSL/video/dev", 
        "test_data_path": "data/CE-CSL/video/test",
        "train_label_path": "data/CE-CSL/label/train.csv",
        "valid_label_path": "data/CE-CSL/label/dev.csv",
        "test_label_path": "data/CE-CSL/label/test.csv",
        "crop_size": 224,
        "max_frames": 100
    },
    
    "model": {
        "name": "TFNet",
        "hidden_size": 256,
        "device_target": "GPU",
        "device_id": 0,
        "enable_graph_kernel": false,
        "enable_reduce_precision": true,
        "enable_auto_mixed_precision": false
    },
    
    "training": {
        "batch_size": 1,
        "learning_rate": 0.0001,
        "num_epochs": 5,
        "num_workers": 1,
        "weight_decay": 0.0001,
        "gradient_clip_norm": 1.0,
        "save_interval": 1,
        "eval_interval": 1,
        "early_stopping_patience": 3,
        "prefetch_size": 1,
        "max_rowsize": 8,
        "enable_data_sink": false
    },
    
    "optimizer": {
        "type": "Adam",
        "lr_scheduler": {
            "type": "MultiStepLR",
            "milestones": [3, 4],
            "gamma": 0.5
        }
    },
    
    "loss": {
        "ctc_blank_id": 0,
        "ctc_reduction": "mean",
        "kd_temperature": 4,
        "kd_weight": 10.0
    },
    
    "paths": {
        "checkpoint_dir": "training/checkpoints_gpu_test",
        "log_dir": "training/logs_gpu_test",
        "output_dir": "training/output_gpu_test",
        "best_model_path": "training/checkpoints_gpu_test/best_model.ckpt",
        "current_model_path": "training/checkpoints_gpu_test/current_model.ckpt"
    },
    
    "logging": {
        "level": "INFO",
        "save_logs": true,
        "print_interval": 5
    },
    
    "gpu_optimization": {
        "enable_graph_mode": true,
        "enable_mem_reuse": true,
        "max_device_memory": "2GB",
        "enable_profiling": false,
        "enable_dump": false
    }
}
