{
    "dataset": {
        "name": "CE-CSL",
        "train_data_path": "data/CE-CSL/video/train",
        "valid_data_path": "data/CE-CSL/video/dev", 
        "test_data_path": "data/CE-CSL/video/test",
        "train_label_path": "data/CE-CSL/label/train.csv",
        "valid_label_path": "data/CE-CSL/label/dev.csv",
        "test_label_path": "data/CE-CSL/label/test.csv",
        "crop_size": 224,
        "max_frames": 300
    },
    
    "model": {
        "name": "TFNet",
        "hidden_size": 1024,
        "device_target": "GPU",
        "device_id": 0,
        "enable_graph_kernel": true,
        "enable_reduce_precision": false,
        "enable_auto_mixed_precision": true
    },
    
    "training": {
        "batch_size": 8,
        "learning_rate": 0.0001,
        "num_epochs": 55,
        "num_workers": 4,
        "weight_decay": 0.0001,
        "gradient_clip_norm": 1.0,
        "save_interval": 5,
        "eval_interval": 1,
        "early_stopping_patience": 10,
        "prefetch_size": 2,
        "max_rowsize": 32,
        "enable_data_sink": true
    },
    
    "optimizer": {
        "type": "Adam",
        "lr_scheduler": {
            "type": "MultiStepLR",
            "milestones": [35, 45],
            "gamma": 0.2
        }
    },
    
    "loss": {
        "ctc_blank_id": 0,
        "ctc_reduction": "mean",
        "kd_temperature": 8,
        "kd_weight": 25.0
    },
    
    "paths": {
        "checkpoint_dir": "training/checkpoints_gpu",
        "log_dir": "training/logs_gpu",
        "output_dir": "training/output_gpu",
        "best_model_path": "training/checkpoints_gpu/best_model.ckpt",
        "current_model_path": "training/checkpoints_gpu/current_model.ckpt"
    },
    
    "logging": {
        "level": "INFO",
        "save_logs": true,
        "print_interval": 10
    },
    
    "gpu_optimization": {
        "enable_graph_mode": true,
        "enable_mem_reuse": true,
        "max_device_memory": "8GB",
        "enable_profiling": false,
        "enable_dump": false
    }
}
