{
  "dataset": {
    "name": "CE-CSL",
    "train_data_path": "data/CE-CSL/video/train",
    "valid_data_path": "data/CE-CSL/video/dev",
    "test_data_path": "data/CE-CSL/video/test",
    "train_label_path": "data/CE-CSL/label/train.csv",
    "valid_label_path": "data/CE-CSL/label/dev.csv",
    "test_label_path": "data/CE-CSL/label/test.csv",
    "crop_size": 64,
    "max_frames": 16
  },
  "model": {
    "name": "TFNet",
    "hidden_size": 64,
    "device_target": "CPU",
    "dataset_name": "CE-CSL"
  },
  "training": {
    "batch_size": 1,
    "learning_rate": 0.0005,
    "num_epochs": 3,
    "num_workers": 1,
    "weight_decay": 0.0001,
    "gradient_clip_norm": 1.0,
    "save_interval": 1,
    "eval_interval": 1,
    "early_stopping_patience": 3,
    "prefetch_size": 1,
    "max_rowsize": 8
  },
  "optimizer": {
    "type": "Adam",
    "lr_scheduler": {
      "type": "MultiStepLR",
      "milestones": [3, 4],
      "gamma": 0.2
    }
  },
  "loss": {
    "ctc_blank_id": 0,
    "ctc_reduction": "mean",
    "kd_temperature": 4,
    "kd_weight": 10.0
  },
  "paths": {
    "checkpoint_dir": "training/checkpoints",
    "log_dir": "training/logs",
    "output_dir": "training/output",
    "best_model_path": "training/checkpoints/best_tfnet_model_optimized.ckpt",
    "current_model_path": "training/checkpoints/current_tfnet_model_optimized.ckpt"
  },
  "logging": {
    "level": "INFO",
    "save_logs": true,
    "print_interval": 10
  }
}
