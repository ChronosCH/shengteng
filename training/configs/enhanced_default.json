{
  "experiment_name": "enhanced_cecsl",
  "description": "增强版CE-CSL训练",
  "data_root": "data/CE-CSL",
  "max_sequence_length": 64,
  "image_size": [
    112,
    112
  ],
  "vocab_size": 1000,
  "d_model": 256,
  "n_layers": 3,
  "dropout": 0.2,
  "batch_size": 2,
  "learning_rate": 0.0002,
  "weight_decay": 0.001,
  "epochs": 150,
  "warmup_epochs": 10,
  "optimizer_type": "adam",
  "beta1": 0.9,
  "beta2": 0.999,
  "scheduler_type": "cosine",
  "min_learning_rate": 1e-06,
  "patience": 20,
  "min_delta": 0.001,
  "use_augmentation": true,
  "augment_factor": 3,
  "noise_std": 0.01,
  "time_stretch_range": [
    0.8,
    1.2
  ],
  "device_target": "CPU",
  "output_dir": "output\\enhanced_cecsl",
  "save_best_only": true,
  "save_checkpoint_steps": 100,
  "log_interval": 10,
  "log_level": "INFO",
  "attention_heads": 8,
  "mixup_alpha": 0.2,
  "cutmix_alpha": 1.0,
  "label_smoothing": 0.1
}