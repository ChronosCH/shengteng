{
  "experiment_name": "optimal_cecsl",
  "description": "最优CE-CSL训练配置",
  "data_root": "data/CE-CSL",
  "max_sequence_length": 64,
  "image_size": [
    112,
    112
  ],
  "vocab_size": 1000,
  "d_model": 384,
  "n_layers": 4,
  "dropout": 0.3,
  "batch_size": 4,
  "learning_rate": 0.001,
  "weight_decay": 0.001,
  "epochs": 200,
  "warmup_epochs": 20,
  "optimizer_type": "adam",
  "beta1": 0.9,
  "beta2": 0.999,
  "scheduler_type": "cosine",
  "min_learning_rate": 1e-06,
  "patience": 20,
  "min_delta": 0.001,
  "use_augmentation": true,
  "augment_factor": 5,
  "noise_std": 0.01,
  "time_stretch_range": [
    0.8,
    1.2
  ],
  "device_target": "CPU",
  "output_dir": "output\\optimal_cecsl",
  "save_best_only": true,
  "save_checkpoint_steps": 100,
  "log_interval": 10,
  "log_level": "INFO",
  "attention_heads": 12,
  "hidden_dim": 1536,
  "ensemble_models": 3,
  "smart_augmentation": true,
  "gradient_clip_norm": 1.0,
  "use_focal_loss": true,
  "focal_alpha": 0.25,
  "focal_gamma": 2.0
}